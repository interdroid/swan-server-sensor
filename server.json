{"name": "server",
 "namespace": "interdroid.swan.cuckoo_sensors",
 "doc": "A sensor for the return http status of a web server",
 "author": "roelof &lt;rkemp@cs.vu.nl&gt;",
 "configs": [
  {"name": "url", 
   "class": "EditTextPreference",
   "type": "String",
   "android:inputType": "textUri", 
   "android:title" : "Server URL",
   "android:summary" : "Set Server URL",
   "android:dialogTitle": "Enter Server URL"},
  {"name": "timeout",
   "class": "EditTextPreference",
   "type" : "long", 
   "android:inputType": "number", 
   "android:title" : "Time out (ms)",
   "android:summary" : "Set connection time out",
   "android:dialogTitle": "Enter connection time out (ms)",
   "default" : "1000",
  }
 ],
 "valuePaths": [{"name":"http_status", "type":"long"}],
}